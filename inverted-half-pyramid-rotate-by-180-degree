public class Practice {
    public static void main(String [] args){
       int row = 4;
       for(int i = 1; i<= row; i++){
       
           // inner loop for space
           
           for(int j= 1; j<=row-i; j++){
               System.out.print(" ");
           }
           
           //inner loop for star
           
           for(int j = 1; j<= i ;j++){
               System.out.print("*");
           }
           System.out.println();
       }

    }
}
